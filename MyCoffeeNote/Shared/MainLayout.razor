@using Blazored.LocalStorage
@inherits LayoutComponentBase
@inject ISyncLocalStorageService LocalStorage;

@code {
    private bool IsDarkMode
    {
        get => LocalStorage.GetItem<bool>("isDarkMode");
        set => LocalStorage.SetItem("isDarkMode", value);
    }
}

<MudThemeProvider IsDarkMode="IsDarkMode"></MudThemeProvider>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    @Body
    <MudSwitch @bind-Value="@IsDarkMode" Color="Color.Primary" Class="ma-4" Style="align-self:flex-end;" T="bool" Label="Toggle Light/Dark Mode" />
</MudLayout>
